pub fn part1_test() {
  part1_examples
  |> should.not_equal([])
  use example <- list.map(part1_examples)
  solve.part1(example.input)
  |> should.equal(example.answer)
}

pub fn part2_test() {
  part2_examples
  |> should.not_equal([])
  use example2 <- list.map(part2_examples)
  solve.part2(example2.input)
  |> should.equal(example2.answer)
}
